%br
%div{id: :displayImage, style: "display: none"}
%input{id: "imageUploader", type: :file, style: "display: none"}
%button{id: "buttonUploader"} Upload Image
= form_for (@blog) do |f|
  %textarea{name: "image", id: "base64Image", style: "display: none"}
  %br
  = f.text_field :title, placeholder: "Title"
  %br
  = f.text_field :caption, placeholder: "Caption"
  %br
  = f.text_area :description, placeholder: "Create new blog"
  %br
  %select.js-example-basic-multiple{:multiple => "multiple", :style => "width: 25%", :name => "categories[]"}
    -@categories.each do |category|
      -if @blog.categories.include?(category)
        %option{:value => "#{category.id}", :selected => true}=category.name
      - else
        %option{:value => "#{category.id}"}= category.name
  %br
  = f.submit @btnsave