= form_for (@blog) do |f|
    .image_upload
    = f.file_field :image
    = f.text_area :image, :id => "image_base64_holder"#, style: "#{'display:none'}"
    .image_holder{:style => 'height:100px;width:100px;'}
    %br
    = f.text_field :title, placeholder: "Title"
    %br
    = f.text_field :caption, placeholder: "Caption"
    %br
    = f.text_area :description, placeholder: "Create new blog"
    %br
    
    %select.category_select2{:style => "width: 10%"}

    %br
    = f.submit @btnsave
