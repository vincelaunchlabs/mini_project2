= link_to "Back", :back
= button_to "Create Blog", new_blog_path, :method => :get
= will_paginate @blogs
- @blogs.each do |blog|

  %hr
  = image_tag blog.image.to_s
  %br
  %ins
    %strong
      = link_to blog.title, blog_path(blog)
  %br
  = blog.caption
  %br
  = blog.description
  %br
  - if blog.categories.any?
    = pluralize(blog.categories.count, "Category")
    = ":"
    - blog.categories.each do |category|
      = category.name

  -if blog.is_draft
    = button_to "Edit", edit_blog_path(blog), :method => :get, :class => "edit_button"
    %button{id: blog.id, :class => "go_live_button"} Live
  -else
    - if blog.is_archived?
      %button{id: blog.id, :class => "archive_button"} Archived
    - else
      %button{id: blog.id, :class => "archive_button"} Archive