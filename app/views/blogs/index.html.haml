= link_to "Back", :back
= button_to "Create Blog", new_blog_path, :method => :get
= will_paginate @blogs
- @blogs.each do |blogs|

  %hr
  = image_tag blogs.image.to_s
  %br
  %ins
    %strong
      = link_to blogs.title, blog_path(blogs)
  %br
  = blogs.caption
  %br
  = blogs.description
  %br
  = button_to "Edit", edit_blog_path(blogs), :method => :get, :class => "edit_button", style: "display: none"
  %button{id: blogs.id, :class => "go_live_button", style: "display: none"} Live
  %button{id: blogs.id, :class => "archive_button", style: "display: none"} Archive
  -if blogs.is_draft
    = button_to "Edit", edit_blog_path(blogs), :method => :get, :class => "edit_button"
    %button{id: blogs.id, :class => "go_live_button"} Live
  -else
    - if blogs.is_archived?
      %button{id: blogs.id, :class => "archive_button"} Archived
    - else
      %button{id: blogs.id, :class => "archive_button"} Archive